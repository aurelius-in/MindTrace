# Enterprise Employee Wellness AI - Environment Configuration

# Application Settings
APP_NAME=Enterprise Employee Wellness AI
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://wellness-ai.example.com

# Database Configuration
DATABASE_URL=postgresql://wellness_user:wellness_pass@localhost:5432/wellness_db
REDIS_URL=redis://localhost:6379
VECTOR_DB_URL=chromadb://localhost:8000

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEFAULT_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-ada-002

# Security & Privacy
SECRET_KEY=your_secret_key_here_make_it_long_and_random
ENCRYPTION_KEY=your_encryption_key_here_make_it_long_and_random
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
DP_EPSILON=1.0
ANONYMIZATION_ENABLED=true

# Agent Configuration
WELLNESS_COMPANION_MODEL=gpt-4
WELLNESS_MEMORY_TYPE=episodic
WELLNESS_RISK_THRESHOLD=0.7
RESOURCE_VECTOR_DB=chromadb
RESOURCE_EMBEDDING_MODEL=text-embedding-ada-002
SENTIMENT_MODELS=vader,roberta
RISK_INDICATORS=burnout,stress_spike,toxic_patterns
ANALYTICS_AGGREGATION_WINDOW=7d
ANALYTICS_RETENTION_DAYS=365

# Enterprise Integrations
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
TEAMS_APP_ID=your-teams-app-id
TEAMS_CLIENT_SECRET=your-teams-client-secret

# HRIS Integrations
WORKDAY_CLIENT_ID=your-workday-client-id
WORKDAY_CLIENT_SECRET=your-workday-client-secret
BAMBOO_HR_API_KEY=your-bamboo-hr-api-key

# Monitoring & Observability
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_URL=http://localhost:3000
OPA_POLICY_URL=http://localhost:8181

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=True

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/wellness-ai.log

# Privacy Scrubbing Rules (JSON format)
PRIVACY_SCRUBBING_RULES={"email": "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Z|a-z]{2,}\\b", "phone": "\\b\\d{3}[-.]?\\d{3}[-.]?\\d{4}\\b", "ssn": "\\b\\d{3}-\\d{2}-\\d{4}\\b"}

# Development Settings (set to true for development)
DEVELOPMENT_MODE=false
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_TEST_DATA=false

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
WORKER_PROCESSES=4

# Data Retention
CONVERSATION_RETENTION_DAYS=90
ANALYTICS_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555

# Feature Flags
ENABLE_SLACK_INTEGRATION=true
ENABLE_TEAMS_INTEGRATION=true
ENABLE_HRIS_INTEGRATION=true
ENABLE_DIFFERENTIAL_PRIVACY=true
ENABLE_REAL_TIME_ANALYTICS=true
